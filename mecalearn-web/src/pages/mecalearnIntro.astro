---
import Heading from "../components/Heading.astro";
import Paragraph from "../components/Paragraph.astro";
import ClassLayout from "../layouts/ClassLayout.astro";

const introductionText: string = "En esta lección aprenderás los conceptos fundamentales de programación: variables, tipos de datos, y estructuras de control básicas. Estos elementos son esenciales para escribir programas eficientes y bien estructurados."
const images = [
  { src: "https://www.example.com/image1.jpg", alt: "Concepto de Programación" },
  { src: "https://www.example.com/image2.jpg", alt: "Variables en Programación" },
  { src: "https://www.example.com/image3.jpg", alt: "Estructuras de Control" },
];
const restOfLecture: string = "Continúa practicando estos conceptos resolviendo problemas de programación simples. En este ejercicio escribirás tu primer programa que imprimirá 'Hola Mundo' usando un lenguaje de programación de tu elección."
---

<ClassLayout title="Introducción a MecaLearn">
  <main>
    <!-- First Row: Video and Introduction -->
    <section class="row">
      <!-- Video Section -->
      <div class="video-container">
        <iframe width="800" height="450" src="https://www.youtube.com/embed/ylErHxQjodw?si=vgZosa-a9HzaJmin" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
      </div>

      <!-- Introduction Text -->
      <div class="intro-text">
        <Heading
        title="Hello World!"
        sub="Just"
        ></Heading>
        <Paragraph text={introductionText} />
      </div>
    </section>

    <!-- Second Row: Image Gallery -->
    <section class="image-gallery">
      <Heading title="Galería de Imágenes" />
      <div class="gallery-grid">
        {images.map((image) => (
          <div class="gallery-item">
            <img src={image.src} alt={image.alt} />
          </div>
        ))}
      </div>
    </section>

    <!-- Third Row: Rest of Lecture Content -->
    <section class="rest-of-lecture">
      <Heading title="Contenido Adicional" />
      <Paragraph text={restOfLecture} />
      <!-- <div class="practice">
        <h4>Ejercicio Práctico</h4>
        <p>Escribe un programa que imprima "Hola Mundo". Envía tu código en el formulario de tareas.</p>
        <a href="/submit-assignment" class="btn-primary">Enviar Tarea</a>
      </div> -->
    </section>
  </main>

  <style>
    main {
      padding: 2rem;
      font-family: 'Arial', sans-serif;
      color: #333;
      max-width: 100%;
      box-sizing: border-box;
    }

    /* First row: Video and Introduction */
    .row {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .video-container {
      flex: 2;
      max-width: 100%;
    }

    .video-container video {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }

    .intro-text {
      flex: 1;
      min-width: 300px;
      max-width: 100%;
      background-color: #f9f9f9;
      padding: 1.5rem;
      border-radius: 8px;
    }

    /* Second row: Image Gallery */
    .image-gallery {
      margin-bottom: 3rem;
    }

    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }

    .gallery-item img {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }

    /* Third row: Rest of Lecture Content */
    .rest-of-lecture {
      background-color: #e0f7fa;
      padding: 2rem;
      border-radius: 8px;
    }

    .practice {
      margin-top: 1.5rem;
      background-color: #fff;
      padding: 1rem;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    .btn-primary {
      display: inline-block;
      padding: 0.8rem 1.5rem;
      background-color: #0077b6;
      color: white;
      border-radius: 8px;
      text-decoration: none;
    }

    .btn-primary:hover {
      background-color: #005f87;
    }

    /* Responsive design for smaller screens */
    @media (max-width: 768px) {
      .row {
        flex-direction: column;
      }
    }
  </style>
</ClassLayout>
